---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Card from '../../components/Card.astro';
import Button from '../../components/Button.astro';

const articles = [
    { link: "/", title: "記事1", description: "これは記事1の概要です。" },
    { link: "/", title: "記事2", description: "これは記事2の概要です。" },
    { link: "/", title: "記事3", description: "これは記事2の概要です。" },
];
---
<BaseLayout title="ブログ記事一覧">
    <div class="py-6 px-5 md:px-8 min-h-150 md:min-h-200 bg-gray-light rounded-tl-none flex items-center">
        <div class="container mx-auto">
            <h1 class="font-medium text-2xl md:text-4xl text-gray-900">ブログ記事一覧</h1>
        </div>
    </div>
    <main class="l-content">
        <div class="container mx-auto">
            <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
                {articles.map(article => (
                    <li>
                        <Card {...article} />
                    </li>
                ))}
            </ul>
            <div class="mt-11 md:mt-12">
                <nav class="flex flex-wrap items-center justify-center gap-3 md:gap-6">
                    <Button label="前へ" href="/blog/"></Button>
                    <Button label="1" href="/blog/"></Button>
                    <Button label="2" href="/blog/"></Button>
                    <Button label="3" href="/blog/"></Button>
                    <Button label="4" href="/blog/"></Button>
                    <Button label="次へ" href="/blog/"></Button>
                </nav>
            </div>
        </div>
    </main>
</BaseLayout>
