---
import BaseLayout from '../../layouts/BaseLayout.astro';
const { slug } = Astro.params;
--
<BaseLayout title={`記事: ${slug}`}>
    <div class="py-6 px-5 md:px-8 min-h-150 md:min-h-200 bg-gray-light rounded-tl-none flex items-center">
        <div class="container mx-auto">
            <h1 class="font-medium text-2xl md:text-4xl text-gray-900">記事: {slug}</h1>
        </div>
    </div>
    <main class="l-content">
        <div class="container mx-auto">
            <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
                {articles.map(article => (
                    <li>
                        <Card {...article} />
                    </li>
                ))}
            </ul>
        </div>
    </main>
</BaseLayout>