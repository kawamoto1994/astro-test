---
import BaseLayout from '../../layouts/BaseLayout.astro';
const { slug } = Astro.params;

export async function getStaticPaths() {
    return [
      // { params: { /* required */ }, props: { /* optional */ } },
      { params: { slug: '1' } }, // [slug] is the parameter
      { params: { slug: '2' } }, // must match the file name
      // ...
    ];
}
---
<BaseLayout title={`記事: ${slug}`}>
    <div class="py-6 px-5 md:px-8 min-h-150 md:min-h-200 bg-gray-light rounded-tl-none flex items-center">
        <div class="container mx-auto">
            <h1 class="font-medium text-2xl md:text-4xl text-gray-900">記事: {slug}</h1>
        </div>
    </div>
    <main class="l-content">
        <div class="container mx-auto">
            記事の内容が入る
        </div>
    </main>
</BaseLayout>